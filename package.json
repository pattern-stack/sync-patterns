{
  "name": "@pattern-stack/sync-patterns",
  "version": "0.1.0",
  "description": "Generate typed clients from OpenAPI specs with runtime validation",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "sync-patterns": "./dist/cli/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./generators": {
      "types": "./dist/generators/index.d.ts",
      "import": "./dist/generators/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "vitest",
    "test:run": "vitest run",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "openapi-types": "^12.1.3"
  },
  "peerDependencies": {
    "zod": "^4.0.0",
    "@tanstack/react-query": "^5.60.0",
    "axios": "^1.6.0"
  },
  "peerDependenciesMeta": {
    "@tanstack/react-query": {
      "optional": true
    },
    "axios": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/node": "^22.10.0",
    "eslint": "^9.15.0",
    "typescript-eslint": "^8.16.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.6",
    "zod": "^4.1.13",
    "@tanstack/react-query": "^5.90.11",
    "axios": "^1.7.8"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "openapi",
    "codegen",
    "typescript",
    "zod",
    "sync",
    "local-first",
    "tanstack-query",
    "react-query"
  ],
  "author": "Pattern Stack Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pattern-stack/sync-patterns.git"
  }
}
