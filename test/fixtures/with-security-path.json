{
  "openapi": "3.1.0",
  "info": {
    "title": "API with Path-level Security",
    "version": "1.0.0"
  },
  "paths": {
    "/api/v1/products": {
      "security": [
        {
          "apiKeyAuth": []
        }
      ],
      "get": {
        "operationId": "list_products",
        "summary": "List products - inherits path-level auth",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Product"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Product": {
        "type": "object",
        "required": ["id", "name"],
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "apiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-Key"
      }
    }
  }
}
