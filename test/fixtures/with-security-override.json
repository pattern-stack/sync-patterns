{
  "openapi": "3.1.0",
  "info": {
    "title": "API with Security Override",
    "version": "1.0.0"
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/api/v1/public": {
      "get": {
        "operationId": "get_public_data",
        "summary": "Public endpoint - explicitly no auth",
        "security": [],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PublicData"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/protected": {
      "get": {
        "operationId": "get_protected_data",
        "summary": "Protected endpoint - uses global auth",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProtectedData"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "PublicData": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      },
      "ProtectedData": {
        "type": "object",
        "properties": {
          "secret": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
