# sync-patterns Environment Configuration
# Copy this file to .env and customize for your project

# =============================================================================
# GENERATED CLIENT CONFIGURATION
# These values are used when generating the API client code
# =============================================================================

# API URL - The base URL for your backend API
# This becomes the default fallback in generated client code
# Can be overridden at runtime via VITE_API_URL (or your custom env var)
SYNC_PATTERNS_API_URL=http://localhost:8000

# Environment variable name for API URL in generated code
# Default: VITE_API_URL (works with Vite projects)
# For Next.js, use: NEXT_PUBLIC_API_URL
SYNC_PATTERNS_API_URL_ENV=VITE_API_URL

# Request timeout in milliseconds
SYNC_PATTERNS_TIMEOUT=10000

# localStorage key for auth token
SYNC_PATTERNS_AUTH_TOKEN_KEY=auth_token

# =============================================================================
# FUTURE: SYNC CONFIGURATION (TanStack DB / ElectricSQL)
# =============================================================================

