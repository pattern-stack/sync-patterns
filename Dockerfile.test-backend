# Dockerfile for SYNC-012 broadcast test server
# Based on Python 3.11 slim for minimal image size

FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
# We need FastAPI, uvicorn, redis, and SSE support
RUN pip install --no-cache-dir \
    fastapi>=0.100.0 \
    uvicorn[standard]>=0.23.0 \
    redis>=5.0.0 \
    sse-starlette>=1.6.0 \
    pydantic>=2.0.0

# Copy the broadcast test server
COPY backend-patterns/tests/integration/broadcast_test_server.py /app/server.py

# Expose port
EXPOSE 8000

# Health check endpoint will be at /health
HEALTHCHECK --interval=5s --timeout=3s --retries=10 --start-period=10s \
    CMD curl -f http://localhost:8000/health || exit 1

# Run the server
CMD ["uvicorn", "server:app", "--host", "0.0.0.0", "--port", "8000"]
