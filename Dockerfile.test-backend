# Dockerfile for SYNC-012 broadcast test server
# Standalone server for E2E testing (no pattern_stack dependency)

FROM python:3.11-slim

WORKDIR /app

# Install curl for health checks
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies (minimal set for standalone server)
RUN pip install --no-cache-dir \
    fastapi>=0.100.0 \
    uvicorn[standard]>=0.23.0 \
    pydantic>=2.0.0

# Copy the standalone test server
COPY sync-patterns/test-server/server.py /app/server.py

EXPOSE 8000

HEALTHCHECK --interval=5s --timeout=3s --retries=10 --start-period=10s \
    CMD curl -f http://localhost:8000/health || exit 1

CMD ["uvicorn", "server:app", "--host", "0.0.0.0", "--port", "8000"]
